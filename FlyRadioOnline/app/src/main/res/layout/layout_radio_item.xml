<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:voisePlayingIconAttr="http://schemas.android.com/apk/res-auto"
    android:layout_width="166px"
    android:layout_height="166px"
    android:layout_marginTop="8px"
    android:layout_marginEnd="8px">

    <ImageView
        android:id="@+id/ivRadioPicture"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.flyaudio.flyradioonline.view.VoicePlayingIcon
        android:id="@+id/vpiRadioItemIcon"
        android:layout_width="50px"
        android:layout_height="50px"
        android:layout_centerInParent="true"
        android:background="@android:color/transparent"
        android:visibility="gone"
        voisePlayingIconAttr:pointer_color="@color/radio_item_text_background_blue"
        voisePlayingIconAttr:pointer_num="4"
        voisePlayingIconAttr:pointer_speed="20"
        voisePlayingIconAttr:pointer_width="4" />

    <TextView
        android:id="@+id/tvRadioName"
        android:layout_width="match_parent"
        android:layout_height="66px"
        android:layout_alignParentBottom="true"
        android:alpha="0.88"
        android:background="@color/radio_item_text_background_black"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="22px" />

    <ImageView
        android:id="@+id/ivRadioItemSurface"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/radio_item_surface_light" />
</RelativeLayout>